                <TextBlock Text="0" Name="r1_income_teor" Width="55" Height="19" TextAlignment="Center"/>
            </Border>
            <Border BorderThickness="0 0 1 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                <TextBlock Text="0" Width="55" Height="18" TextAlignment="Center"/>
            </Border>
            <Border BorderThickness="0 0 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                <TextBlock Text="0" Name="r2_income_teor" Width="55" Height="19" TextAlignment="Center"/>
            </Border>
