                <Border BorderThickness="1 0 1 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r1_bet_teor" Width="55" Height="37" TextAlignment="Center"/>
                </Border>
                <StackPanel>
                    <Border BorderThickness="0 0 0 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                        <TextBlock Text="0" Width="55" Height="19" TextAlignment="Center"/>
                    </Border>
                    <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                        <TextBlock Text="0" Width="55" Height="18" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Border BorderThickness="1 0 1 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r2_bet_teor" Width="55" Height="37" TextAlignment="Center"/>
