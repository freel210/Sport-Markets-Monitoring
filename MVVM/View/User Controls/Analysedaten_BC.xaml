                    </Border>
                    <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                        <TextBlock Text="0" Width="55" Height="18" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <StackPanel>
            <Border BorderThickness="1 1 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                <TextBlock Text="Prices" Width="110" Height="18" FontWeight="Bold" TextAlignment="Center"/>
            </Border>

            <StackPanel Orientation="Horizontal">
                <Border BorderThickness="1 1 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r1_b1p" Width="55" Height="19" FontWeight="Bold" TextAlignment="Center"/>
                </Border>
                <Border BorderThickness="0 1 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
