                    <TextBlock Name="r1_l1a" Width="55" Height="18" TextAlignment="Center"/>
                </Border>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal">
                <Border BorderThickness="1 0 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r2_b1p" Width="55" Height="19" FontWeight="Bold" TextAlignment="Center"/>
                </Border>
                <Border BorderThickness="0 0 1 0" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r2_l1p" Width="55" Height="18" FontWeight="Bold" TextAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Border BorderThickness="1 0 1 1" BorderBrush="{StaticResource ResourceKey=detailMarkBrush}">
                    <TextBlock Name="r2_b1a" Width="55" Height="18" TextAlignment="Center"/>
